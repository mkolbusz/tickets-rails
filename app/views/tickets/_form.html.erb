<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-5">
          <%= form.label :seat_id_seq %>
          <%= form.text_field :seat_id_seq, id: :ticket_seat_id_seq, class: "form-control" %>
      </div>
      <div class="col-sm-5">
          <%= form.label :price %>
          <div class="input-group">
              <%= form.number_field :price, id: :ticket_price, class: "form-control", min: 0 %>
              <div class="input-group-append">
                  <span class="input-group-text"><%= number_to_currency(0)[0] %></span>
              </div>
            </div>
          
      </div>
      <div class="col-sm-2">
          <%= form.submit "Add ticket", class: "btn btn-primary", style: "margin-top: 2em" %>
      </div>
      <%= form.hidden_field :event_id, :value => ticket.event_id %>
    </div>
  </div>
<% end %>
